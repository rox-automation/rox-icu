{
  "initializeCommand": "mkdir -p .devcontainer/extensions", // executed on HOST system
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "USER_UID": "${localEnv:USER_UID}",
      "USER_GID": "${localEnv:USER_GID}"
    }
  },
  "runArgs": [
    "--network",
    "host",
    "--privileged"
  ],
  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer/extensions,target=/home/dev/.vscode-server/extensions,type=bind,consistency=cached"
  ],
  "postCreateCommand": ".devcontainer/init_container.sh",
  // set env variables
  "containerEnv": {
    "PYTHONPATH": "${containerWorkspaceFolder}/embedded_lib",
    "CAN_CHANNEL": "224.0.0.1",
    "CAN_INTERFACE": "udp_multicast"
  },
  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "shardulm94.trailing-spaces",
        "mhutchie.git-graph",
        "doi.fileheadercomment",
        "donjayamanne.githistory",
        "ms-python.mypy-type-checker",
        "tamasfe.even-better-toml",
        "GitHub.copilot",
        "ms-python.pylint",
        "ms-python.black-formatter",
        "ms-python.isort"
      ]
    }
  }
}
